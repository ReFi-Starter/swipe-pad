  id SERIAL PRIMARY KEY,
  user_id INT REFERENCES users(id),
  achievement_id INT NOT NULL,
  unlocked_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  UNIQUE(user_id, achievement_id)
);

